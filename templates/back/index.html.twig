{% extends 'base-back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<h1>User index</h1>


<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                {# <th>Motpasse</th>#}
                <th>Numero_telephone</th>
                <th>Roles Choisir</th>
                <th>Roles</th>
                <th>PhotoUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                {# <td> {{ user.password }}</td>#}
                <td>{{ user.numerotelephone }}</td>
                <td>{{ user.nomrole }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_FOUR" %}
                            Fournisseur
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}        
                    {% endfor %}
                </td>

                <td><img src="{{ asset('photo/' ~ user.photoUser) }}" 
                alt="" style="width: 5000px:height:5000px"></td>
                <td>
                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                <a href="{{ path('role_user', {'id': user.id}) }}">editRole</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
{% endblock %}
