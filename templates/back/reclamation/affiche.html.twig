{% extends 'base-back.html.twig' %}

{% block title %}Reclamations{% endblock %}

{% block body %}
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reclamations</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th> ID </th>
                            <th> Type </th>
                            <th> Destination</th>
                            <th> Description </th>
                            <th> Etat</th>
                            <th> Flag </th>
                            <th> Fichier </th>
                            <th> Supprimer </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reclamation in reclamations %}
                        <tbody>
                        <tr>
                            <td> {{ reclamation.idRec }} </td>
                            <td> {{ reclamation.typeRec }} </td>
                            <td> {{reclamation.destination.getNomDest() }}</td>
                            <td> {{ reclamation.descriptionRec }} </td>
                            <td> {{ reclamation.etatRec }} </td>
                            <td> {{ reclamation.flag }} </td>
                            <td class="py-1">

                            </td>
                            <td ><a href="{{ path('reclamation_delete', {"id": reclamation.getIdRec()}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer?')"><i class="badge badge-outline-danger">Delete</i></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}