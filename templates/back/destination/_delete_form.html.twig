<form method="post" action="{{ path('destination_delete', {'id': destination.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet endroit?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ destination.id) }}">
    <button class="btn_2"><i class="fas fa-trash-alt" style="color: #0f192a">Supprimer</i></button>
</form>