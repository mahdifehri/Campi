{% extends 'base-front.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Echangez vos pensées et vos idées</p>
                        <h1>Notre Blog</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="latest-news mt-150 mb-150">
        <div class="container">
            <div class="row">
                {% for post in posts %}
                <div class="col-lg-12 col-md-6">
                    <div class="single-latest-news">
                        <a href="{{ path('post_show', {"id": post.id}) }}"><div class="latest-news-bg news-bg-2"></div></a>
                        <img src="{{ post.image }}" alt="{{ post.image }}" width="1200" height="500">
                        <div class="news-text-box">
                            <h3><a href="{{ path('post_show', {"id": post.id}) }}">{{ post.titre }}</a></h3>
                            <div style="float: right;">
                                <a href="{{ path('post_addReact', {"id": post.id}) }}" ><i class="fas fa-arrow-circle-up" style="font-size: xx-large"></i></a>
                            </div>
                            <p class="blog-meta">
                                <span class="author"><i class="fas fa-user"></i> Admin</span>
                                <span class="author"><i class="fas fa-arrow-circle-up"></i> Nombre de réactions:{{ post.nbrReaction }}</span>
                                <span class="author"><i class="fas fa-comment"></i> Nombre de commentaires:{{ post.nbrCommentaire }}</span>
                            </p>
                            <p class="excerpt">{{ post.contenu }}</p>
                            <a href="{{ path('post_show', {"id": post.id}) }}" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
