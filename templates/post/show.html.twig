{% extends 'base-front.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Echangez vos pensées et vos idées</p>
                        <h1>Notre Blog</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <!-- single article section -->
    <div class="mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div style="margin-bottom: 20px">
                <i class="fas fa-home"></i> <a href="{{ path('post_index')}}" class="read-more-btn">Retourner à la page principale </a>
                </div>
                <div class="col-lg-12">
                    <div class="single-article-section">
                        <div class="single-article-text">
                            <p class="blog-meta">
                                <img src="{{ post.image }}" alt="{{ post.image }}" style="margin-bottom:20px;"width="1200" height="500">
                                <span class="author"><i class="fas fa-user" ></i> Admin</span>
                                <span class="date"><i class="fas fa-calendar" ></i> 27 December, 2019</span>
                            </p>
                            <h2>{{ post.titre }}</h2>
                            <p>{{ post.contenu }}</p>
                        </div>

                        <div class="comments-list-wrap">
                            <h4 class="comment-count-title">{{ post.nbrCommentaire }} Comments</h4>
                            <div class="comment-list">
                                <div class="single-comment-body">
                                    <div class="comment-user-avater">
                                        <img src="" alt="">
                                    </div>
                                    {% for commentaire in commentaires %}
                                    <div class="comment-text-body">
                                        <h5>Jenny Joe </h5>
                                        <p>{{ commentaire.contenu}}</p>
                                    </div>
                                    {% endfor %}
                                    <div class="single-comment-body child">
                                        <div class="comment-user-avater">
                                            <img src="" alt="">
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="comment-template">
                            <h4>Leave a comment</h4>
                            <p>Si vous avez un commentaire n'hésitez pas à nous le faire découvrir.</p>
                            {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
                                {#  <p>
                                        <input type="text" placeholder="Your Name">
                                        <input type="email" placeholder="Your Email">
                                </p>#}
                                {# <p><label for="comment"></label><textarea name="comment" id="comment" cols="30" rows="10" placeholder="Your Message"></textarea></p> #}
                            <div><p>Votre commentaire</p></div>
                            {{ form_widget(form.contenu) }}
                            {{ form_errors(form.contenu) }}
                                <p><input type="submit" value="Submit"></p>
                            {{ form_rest(form) }}
                            {{ form_end(form)}}
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- end single article section -->
{% endblock %}