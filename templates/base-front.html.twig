<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">
    <title>{% block title %}Produits{% endblock %}</title>
    <link rel="shortcut icon" type="image/png" href="{{ asset("front-office/img/favicon.png") }}">
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
        <!-- fontawesome -->
        <link rel="stylesheet" href="{{ asset("front-office/css/all.min.css") }}">
        <!-- bootstrap -->
        <link rel="stylesheet" href="{{ asset("front-office/bootstrap/css/bootstrap.min.css") }}">
        <!-- owl carousel -->
        <link rel="stylesheet" href="{{ asset("front-office/css/owl.carousel.css") }}">
        <!-- magnific popup -->
        <link rel="stylesheet" href="{{ asset("front-office/css/magnific-popup.css") }}">
        <!-- animate css -->
        <link rel="stylesheet" href="{{ asset("front-office/css/animate.css") }}">
        <!-- mean menu css -->
        <link rel="stylesheet" href="{{ asset("front-office/css/meanmenu.min.css") }}">
        <!-- main style -->
        <link rel="stylesheet" href="{{ asset("front-office/css/main.css") }}">
        <!-- responsive -->
        <link rel="stylesheet" href="{{ asset("front-office/css/responsive.css") }}">
    {% endblock %}

    {% block javascripts %}
        <!-- jquery -->
        <script src="{{ asset("front-office/js/jquery-1.11.3.min.js") }}"></script>
        <!-- bootstrap -->
        <script src="{{ asset("front-office/bootstrap/js/bootstrap.min.js") }}"></script>
        <!-- count down -->
        <script src="{{ asset("front-office/js/jquery.countdown.js") }}"></script>
        <!-- isotope -->
        <script src="{{ asset("front-office/js/jquery.isotope-3.0.6.min.js") }}"></script>
        <!-- waypoints -->
        <script src="{{ asset("front-office/js/waypoints.js") }}"></script>
        <!-- owl carousel -->
        <script src="{{ asset("front-office/js/owl.carousel.min.js") }}"></script>
        <!-- magnific popup -->
        <script src="{{ asset("front-office/js/jquery.magnific-popup.min.js") }}"></script>
        <!-- mean menu -->
        <script src="{{ asset("front-office/js/jquery.meanmenu.min.js") }}"></script>
        <!-- sticker js -->
        <script src="{{ asset("front-office/js/sticker.js") }}"></script>
        <!-- main js -->
        <script src="{{ asset("front-office/js/main.js") }}"></script>
    {% endblock %}
</head>
<body>
{{ include('includes/header.html.twig') }}
{% block body %}
    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Campi</p>
                        <h1>Shop</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <!-- products -->
    <div class="product-section mt-150 mb-150">
    <div>
        {{ include('produit/recherche.html.twig') }}
    </div>
        <div class="container" style="margin-top: 100px">
            <div class="row product-lists">
                {% for produit in produits %}


                <div class="col-lg-4 col-md-6 text-center berry">
                    <div class="single-product-item">
                        <div class="product-image">
                            <img src="{{ asset('assets/' ~ produit.image) }}" alt="">
                        </div>
                        <h3>{{ produit.nom }}</h3>
                        <p class="product-price">{{ produit.prix }} </p>
                        <a href="cart.html" class="cart-btn"><i class="fas fa-shopping-cart"></i> Ajouter Panier</a>
                    </div>
                </div>

            {% endfor %}
        </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="pagination-wrap">
                        <ul>
                            <li><a href="{{ path('produit') }}">Prev</a></li>
                            <li><a href="{{ path('produit') }}">1</a></li>
                            <li><a class="active" href="{{ path('produit') }}">2</a></li>
                            <li><a href="{{ path('produit') }}">3</a></li>
                            <li><a href="{{ path('produit') }}">Next</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end products -->
    <!--logo caroussel-->
    <div class="logo-carousel-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="logo-carousel-inner">
                        <div class="single-logo-item">
                            <img src={{ asset("FrontOffice/assets/img/company-logos/1.png")}} alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src={{ asset("FrontOffice/assets/img/company-logos/2.png")}} alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src={{ asset("FrontOffice/assets/img/company-logos/3.png")}} alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src={{ asset("FrontOffice/assets/img/company-logos/4.png")}} alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src={{ asset("FrontOffice/assets/img/company-logos/5.png")}} alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end logo carousel -->
{% endblock %}
{{ include('includes/footer.html.twig') }}
</body>
</html>
