{% extends 'base-back.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Motpasse</th>
                <td>{{ user.motpasse }}</td>
            </tr>
            <tr>
                <th>Numero_telephone</th>
                <td>{{ user.numeroTelephone }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>PhotoUser</th>
                <td><img src="{{ asset('photo/' ~ user.photoUser) }}" 
                alt="" ></td>
            </tr>
