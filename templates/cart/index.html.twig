{% extends 'base-front.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Cart</p>
                        <h1>Campi</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="bg-light p-3">
        <h1 style="text-align: center">Votre panier</h1>
    </section>
<section class="container">
    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
            <tr>
                <td>{{ element.produit.nom }}</td>
                <td class="text-end">{{ element.produit.prix }} €</td>
                <td>{{ element.quantite }}</td>
                <td class="text-end">{{ element.quantite * element.produit.prix }} €</td>
                <td>
                    <a href="{{path("cart_add", {id: element.produit.id})}}" class="btn btn-success">
                        Ajoute (+)
                        <i class="bi bi-cart-plus"></i>
                    </a>
                    <a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-warning">
                        Remove(-)
                        <i class="bi bi-cart-dash"></i>
                    </a>
                    <a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn btn-danger">
                        Delete
                        <i class="bi bi-cart-x"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Votre panier est vide</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td class="text-end">{{ total }} €</td>
            <td>
                <a href="{{path("cart_delete_all")}}" class="btn btn-danger">
                    delete
                    <i class="bi bi-cart-x"></i>
                </a>
            </td>
            <td>


            </td>
        </tr>
        </tfoot>

    </table>
    <div >
    <a href="{{path("commandeee",{pr:total})}}" class="btn btn-secondary" >
        Passer une Commande
        <i class="bi bi-cart-x"></i>
    </a>
    </div>
</section>

{% endblock %}