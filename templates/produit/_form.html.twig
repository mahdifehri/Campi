<div class="card">
    <div class="card-body">
          <h4 class="card-title">Ajout Produit </h4>

        <form class="forms-sample">
            {{ form_start(form) }}
            <div class="form-group" >
                <label for="exampleInputName1" >Nom </label>

                    {{ form_widget(form.nom) }}

            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Désignation</label>
                {{ form_widget(form.designation) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Prix</label>
                {{ form_widget(form.prix) }}

            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Quantité </label>
                {{ form_widget(form.quantite) }}
            </div>
            <div class="form-group" >
                <label for="exampleInputPassword4">Catégorie </label><br>
                {{ form_widget(form.categories) }}
            </div>



            <div class="form-group">
                <label>Image</label>

                <div class="input-group col-xs-12">

                    <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                         {{ form_widget(form.image) }}
                          </span>
                </div>


            </div>

            <button type="submit" class="btn btn-primary mr-2">Ajouter </button>
            <button class="btn btn-dark">Cancel</button>
            {{ form_end(form) }}
        </form>
    </div>
</div>

