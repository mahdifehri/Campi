{% extends 'base-back.html.twig' %}

{% block title %}Regions{% endblock %}

{% block body %}
    <h1>A</h1>
    {% for region in regions %}

        <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ region.nomReg }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ region.localisationReg }}</td>
        </tr>
        <tr>
            <th>nombre de participants</th>
            <td>{{ region.nbrParticipantsReg }}</td>
        </tr>
        <tr>
            <th>Nombre d'evenemments</th>
            <td>{{ region.nbrEventReg }}</td>
        </tr>
        <tr>
            <td ><a href="{{ path('region_delete', {"id": region.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer?')"><i class="btn btn-danger"></i></a></td>
        </tr>
    {% endfor %}

    </tbody>
    </table>



{% endblock %}
